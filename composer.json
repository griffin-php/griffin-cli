{
  "name": "griffin/griffin-cli",
  "description": "Command Line Interface for Griffin",
  "type": "project",
  "license": "MIT",
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=8.0",
    "ext-xml": "*",
    "griffin/griffin": "~1.0.0",
    "griffin/harpy": "~1.0.0",
    "minicli/minicli": "~2.2.0",
    "psr/container": "~1.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~9.5.4"
  },
  "autoload": {
    "psr-4": {
      "Griffin\\Cli\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GriffinTest\\Cli\\": "tests"
    }
  },
  "bin": [
    "bin/griffin"
  ],
  "scripts": {
    "test": [
      "phpunit"
    ]
  }
}
