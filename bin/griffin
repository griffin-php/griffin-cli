#!/usr/bin/env php
<?php

if (php_sapi_name() !== 'cli') {
    exit;
}

require __DIR__ . '/../vendor/autoload.php';

use Griffin\Cli\Command;
use Minicli\App;

$app = new App();

$app->setSignature(sprintf('%s help', $argv[0]));
$app->registerCommand('help', new Command\Help($app));

$app->runCommand($argv);
